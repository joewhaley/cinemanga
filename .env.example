# CineManga Environment Configuration
# Copy this file to .env and update with your actual API keys

# ==== API Keys (Required for audio generation) ====
GEMINI_API_KEY=your-google-gemini-api-key-here
ELEVEN_API_KEY=your-elevenlabs-api-key-here

# ==== Audio Generation Configuration ====
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=1.0
GEMINI_MAX_TOKENS=4096

# Audio format preferences
DEFAULT_MUSIC_FORMAT=mp3
DEFAULT_SFX_FORMAT=wav

# Performance settings
RATE_LIMIT_SLEEP=0.7
MAX_RETRIES=4
RETRY_BACKOFF=1.6
REQUEST_TIMEOUT=120

# Output settings
DEFAULT_OUTPUT_DIR=./audio_exports

# ==== FastAPI Configuration ====
BACKEND_PORT=8000
DEBUG=true

# ==== Optional: Skip validation for development ====
# SKIP_CONFIG_VALIDATION=true

# ==== ElevenLabs Configuration ====
ELEVEN_API_URL=https://api.elevenlabs.io/v1/sound-generation

# ==== Development Settings ====
# Uncomment for faster development (no delays, fewer retries)
# RATE_LIMIT_SLEEP=0.1
# MAX_RETRIES=1
